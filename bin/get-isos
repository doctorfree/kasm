#!/bin/bash

# Ubuntu Server 22.04.3 ISO
echo "Downloading Ubuntu Server 22.04.3 ISO"
wget --no-clobber --quiet \
  https://mirror.pit.teraswitch.com/ubuntu-releases/22.04.3/ubuntu-22.04.3-live-server-amd64.iso

# Latest Arch Linux ISO
echo "Downloading latest Arch Linux ISO"
wget --no-clobber --quiet \
  https://mirror.pit.teraswitch.com/archlinux/iso/latest/archlinux-x86_64.iso

# Fedora Workstation 39 ISO
echo "Downloading Fedora Workstation 39 ISO"
wget --no-clobber --quiet \
  https://download.fedoraproject.org/pub/fedora/linux/releases/39/Workstation/x86_64/iso/Fedora-Workstation-Live-x86_64-39-1.5.iso
