#!/bin/bash
#
# clean_docker_logs - zero out all container logs
#                     must be run as root

iamroot=
if [ "${EUID}" ]; then
  [ ${EUID} -eq 0 ] && iamroot=1
else
  uid=$(id -u)
  [ ${uid} -eq 0 ] && iamroot=1
fi

[ "${iamroot}" ] || {
  echo "Must be run as root. Exiting."
  exit 1
}

docker container list | awk ' { print $NF } ' | grep -v NAMES | \
while read container_name
do
  echo "" > $(docker container inspect ${container_name} --format "{{ .LogPath }}")
done
