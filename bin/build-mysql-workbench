#!/bin/bash
#
# build-mysql-workbench - build the doctorwhen/kasm:mysql-workbench Docker image
#                    to be used in the Kasm MySQL Workbench Workspace

IMG_NAME="doctorwhen/kasm:mysql-workbench"

branch="main"
[ "$1" ] && {
  case "$1" in
    dev|develop)
      branch="develop"
      ;;
    prod|production)
      branch="main"
      ;;
    *)
      branch="$1"
      ;;
  esac
}

sudo docker image rm ${IMG_NAME} 2>/dev/null
rm -rf workspaces-images
git clone https://github.com/doctorfree/workspaces-images.git

cd workspaces-images
git checkout ${branch}
bin/build-mysql-workbench
